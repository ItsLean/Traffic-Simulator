<Window x:Class="TrafficSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Traffic Simulator" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="691*"/>
            <ColumnDefinition Width="109*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10,10,0" Grid.ColumnSpan="2">
            <Button Content="Add Node" Click="AddNode_Click" Margin="0,0,10,0"/>
            <Button Content="Connect Nodes" Click="ConnectNodes_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <Canvas x:Name="GraphCanvas"
                Background="LightGray"
                Margin="10,10,10,10"
                MouseDown="GraphCanvas_MouseDown"
                MouseUp="GraphCanvas_MouseUp"
                MouseMove="GraphCanvas_MouseMove"
                AllowDrop="True" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
